<!-- Task Form -->
<% if @task.parental_tasklet %>
	<%= f.fields_for :parental_tasklet do |b| %>
	<div class="form-group">
	  <%= b.label(:task_id, "Parent Task ID (Leave blank for root task): ") %>
	  <%= b.select(:task_id, @all_tasks.reject { |t| t.id == @task.id }.collect {|t| [t.title, t.id]}, { include_blank: true } ) %>
	</div>
	<% end %>
<% else %>
	<!-- Builds a parental tasklet -->
	<%= add_field(f, :parental_tasklet) %>
<% end %>
<div class="form-group">
	<%= f.label(:title) %>
	<%= f.text_field(:title, class: 'form-control') %>
</div>
<div class="form-group">
  <%= f.label(:description) %>
  <%= f.text_area(:description, class: 'form-control') %>
</div>